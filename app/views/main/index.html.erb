<div class="container">
    <div class="container_head">
        <h1>Todo - App</h1>
    </div>
    <div class="container_wrapper">
        <form action="main/create" method="post" >
            <table>
                <tr>
                    <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
                    <td>         
                       <input type="text" class="input-group-text"id="text_inp" name="todo[task]" placeholder="Enter the task">   
                    </td>
                    <td>
                       <input type="date" class="input-group-text" name="todo[due_date]" id="date_inp">
                       <input style="display:none;" type="text" name="todo[completed]">
                    </td>
                    <td>
                       <button type="submit" class="btn btn-primary">add</button>
                    </td>
                </tr>
            </table>
        </form>   
    </div>

    <table class="tasks">
        <tr>
            <th class="task-head">Tasks</th>
            <th class="task-head">Due Date</th>
        </tr>
    <% @todo.each do |todo| %>
        <tr class="task-row">  
            <td class="task-col"><%= todo.task %></td>
            <td class="task-col"><%= todo.due_date%></td>   
            <td><a href="/delete/<%= todo.id %>"><button class="btn btn-primary">delete</button></a></td>   
        </tr> 
    <% end %> 
    </table>
</div>